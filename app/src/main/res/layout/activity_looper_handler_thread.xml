<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Threads.LooperHandlerThread.LooperHandlerThreadActivity">

    <Button
        android:id="@+id/looper_handler_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/looper_handler_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" />

    <Button
        android:id="@+id/looper_handler_taskA_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task A" />

    <Button
        android:id="@+id/looper_handler_taskB_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task B" />

</LinearLayout>